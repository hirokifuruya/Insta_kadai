<h1>一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <tb><%= image_tag(blog.image.url ) if blog.image && blog.image.url %></tb>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <% if blog.user_id == current_user.id %>
    <td><%= link_to "編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<%= link_to '新しく投稿する', new_blog_path %>